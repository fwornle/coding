@startuml
!include /Users/q284340/Agentic/coding/docs/puml/_standard-style.puml

package "MCP Agent Development Pattern" {
  class McpAgentDevelopmentPattern <<MCPAgent>> {
    - graphDatabaseService: GraphDatabaseService
    - vkbApiClient: VkbApiClient
    + manageData()
    + interactWithVkb()
  }

  class GraphDatabaseService <<service>> {
    + provideGraphDatabaseAccess()
  }

  class VkbApiClient <<service>> {
    + provideVkbApiAccess()
  }

  class GraphDatabaseAdapter <<interface>> {
    + adaptGraphDatabase()
  }

  McpAgentDevelopmentPattern --* GraphDatabaseService
  McpAgentDevelopmentPattern --* VkbApiClient
  McpAgentDevelopmentPattern ..> GraphDatabaseAdapter
}

package "Adapters and Interfaces" {
  class GraphDatabaseAdapterImpl implements GraphDatabaseAdapter {
    + adaptGraphDatabase()
  }

  GraphDatabaseAdapter --|> GraphDatabaseAdapterImpl
}

McpAgentDevelopmentPattern ..> VkbApiClient : uses
McpAgentDevelopmentPattern ..> GraphDatabaseService : uses

@enduml