package "Knowledge Persistence Pattern" {
  class KnowledgePersistencePattern {
    - graphDatabase: GraphDatabase
    + persistKnowledge()
    + retrieveKnowledge()
  }

  class GraphDatabase {
    - graphology: Graphology
    - levelDB: LevelDB
    + storeKnowledge()
    + retrieveKnowledge()
  }

  class Graphology {
  }

  class LevelDB {
  }
}

package "Graph Database Service" {
  class GraphDatabaseService {
    + provideGraphDatabaseServices()
  }

  class GraphDatabaseService --* GraphDatabase
}

package "Command Line Interface" {
  class VkbCommand {
    + visualizeKnowledge()
    + performMCPToolsOperations()
  }

  class VkbCommand --* KnowledgePersistencePattern
}

package "Graph Sync" {
  class GraphSyncCommand {
    + synchronizeGraphDatabaseWithJSONExports()
  }

  class GraphSyncCommand --* GraphDatabase
}

package "Knowledge Export" {
  class GraphKnowledgeExporter {
    + exportKnowledgeFromGraphDatabase()
  }

  class GraphKnowledgeExporter --* GraphDatabase
}

package "Vkb Api Client" {
  class VkbApiClient {
    + interactWithKnowledgeBase()
  }

  class VkbApiClient --* KnowledgePersistencePattern
}

package "Persistence Agent" {
  class PersistenceAgent {
    + persistKnowledgeInGraphDatabase()
  }

  class PersistenceAgent --* GraphDatabase
}

KnowledgePersistencePattern --* GraphDatabaseService
GraphDatabaseService --* GraphDatabase
VkbCommand --* GraphDatabaseService
GraphSyncCommand --* GraphDatabase
GraphKnowledgeExporter --* GraphDatabase
VkbApiClient --* KnowledgePersistencePattern
PersistenceAgent --* GraphDatabase

@enduml