package "GraphDatabase" {
  class GraphDatabaseService <<service>> {
    - graphDatabase: GraphDatabase
    + storeData(data: String)
    + retrieveData(id: String)
  }

  class GraphKnowledgeExporter {
    - graphDatabase: GraphDatabase
    + exportData(): JSON
  }

  class PersistenceAgent <<service>> {
    - graphDatabase: GraphDatabase
    + persistData(data: String)
    + retrievePersistedData(id: String)
  }

  class GraphDatabaseAdapter {
    - graphDatabase: GraphDatabase
    + adaptData(data: String)
  }
}

package "Knowledge Management" {
  class VSCodeExtensionBridgePattern {
    - knowledgeGraph: GraphDatabase
    - persistenceAgent: PersistenceAgent
    + manageKnowledge()
    + visualizeKnowledge()
  }

  class MCPTools <<service>> {
    - knowledgeGraph: GraphDatabase
    + performKnowledgeOperations()
  }
}

GraphDatabaseService --* GraphDatabase
GraphKnowledgeExporter --* GraphDatabase
PersistenceAgent --* GraphDatabase
GraphDatabaseAdapter --* GraphDatabase
VSCodeExtensionBridgePattern --* GraphDatabase
VSCodeExtensionBridgePattern --* PersistenceAgent
MCPTools --* GraphDatabase

@enduml