@startuml
!include /Users/q284340/Agentic/coding/docs/puml/_standard-style.puml

left to right direction

actor "UI Developer" as dev
actor "Frontend Architect" as arch
actor "System User" as user

package "UI Component Work Pattern System" {
  usecase "Implement UI Components" as implement
  usecase "Apply Work Patterns" as apply
  usecase "Monitor Pattern Usage" as monitor
  usecase "Analyze Pattern Trends" as analyze
  usecase "Maintain Pattern Stability" as maintain
  usecase "Document Pattern Implementation" as document
  usecase "Validate Component Architecture" as validate
}

package "Pattern Management" {
  usecase "Track Pattern Occurrences" as track
  usecase "Assess Pattern Significance" as assess
  usecase "Generate Pattern Reports" as report
}

dev --> implement
dev --> apply
dev --> document

arch --> validate
arch --> analyze
arch --> assess

user --> monitor

implement ..> track : <<include>>
apply ..> track : <<include>>
monitor ..> report : <<include>>
analyze ..> assess : <<include>>

maintain ..> monitor : <<extend>>
validate ..> analyze : <<extend>>

note right of implement : 10 occurrences recorded
note right of maintain : Trend: stable
note right of assess : Significance level: 5

@enduml