package "UI Component Work Pattern Architecture" {
    
    abstract class ComponentPattern <<pattern>> {
        +name: String
        +category: String
        +description: String
        +significance: Integer
        +occurrences: Integer
        +trend: String
        --
        +analyze(): PatternAnalysis
        +getEvidence(): List<String>
        +calculateSignificance(): Integer
    }
    
    class UiComponentWorkPattern <<implementation>> {
        -occurrences: Integer = 12
        -trend: String = "increasing"
        -usageNotes: List<String>
        --
        +getOccurrences(): Integer
        +getTrend(): String
        +getUsageNotes(): List<String>
        +trackUsage(): void
        +analyzeImplementation(): void
    }
    
    class PatternCatalog <<catalog>> {
        -patterns: List<ComponentPattern>
        -totalPatterns: Integer
        -avgSignificance: Double
        -topPatterns: List<String>
        --
        +addPattern(pattern: ComponentPattern): void
        +getPatternsByCategory(category: String): List<ComponentPattern>
        +calculateAvgSignificance(): Double
        +getTopPatterns(): List<String>
        +generateSummary(): PatternSummary
    }
    
    class PatternSummary <<summary>> {
        +totalPatterns: Integer
        +byCategory: Map<String, Integer>
        +avgSignificance: Double
        +topPatterns: List<String>
        --
        +getCategoryCount(category: String): Integer
        +getOverallStats(): Statistics
    }
    
    enum PatternCategory <<enumeration>> {
        IMPLEMENTATION
        ARCHITECTURAL
        BEHAVIORAL
        STRUCTURAL
    }
    
    class ImplementationDetails <<details>> {
        +language: String
        +usageNotes: List<String>
        +relatedComponents: List<String>
        --
        +addUsageNote(note: String): void
        +linkComponent(component: String): void
    }
    
    interface PatternAnalyzer <<interface>> {
        +analyzePattern(pattern: ComponentPattern): PatternAnalysis
        +trackTrends(pattern: ComponentPattern): TrendData
        +calculateMetrics(pattern: ComponentPattern): Metrics
    }
    
    class UiPatternAnalyzer <<service>> {
        -analysisEngine: AnalysisEngine
        --
        +analyzeUiPatterns(): List<PatternAnalysis>
        +identifyTrends(): TrendReport
        +generateRecommendations(): List<String>
    }
}

' Relationships
ComponentPattern <|-- UiComponentWorkPattern
PatternCatalog *-- "1..*" ComponentPattern
PatternCatalog --> PatternSummary : generates
ComponentPattern --> PatternCategory : categorized by
UiComponentWorkPattern *-- ImplementationDetails
PatternAnalyzer <|.. UiPatternAnalyzer
UiPatternAnalyzer --> UiComponentWorkPattern : analyzes
PatternCatalog --> PatternAnalyzer : uses

' Annotations
note top of UiComponentWorkPattern : 12 occurrences\nTrend: increasing\nSignificance: 6
note right of PatternCatalog : Manages pattern collection\nProvides summary statistics
note bottom of UiPatternAnalyzer : Specialized analyzer for\nUI component patterns

@enduml