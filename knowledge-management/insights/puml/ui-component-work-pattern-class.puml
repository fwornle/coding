package "UI Component Architecture" {
    
    abstract class ComponentPattern <<pattern>> {
        +name: String
        +category: String
        +description: String
        +significance: int
        +occurrences: int
        +trend: String
        --
        +analyze(): void
        +getEvidence(): List<String>
        +calculateSignificance(): int
    }
    
    class UiComponentWorkPattern <<implementation>> {
        -occurrences: int = 10
        -trend: String = "stable"
        -language: String = "Unknown"
        -usageNotes: List<String>
        --
        +getOccurrences(): int
        +getTrend(): String
        +getUsageNotes(): List<String>
        +isStable(): boolean
    }
    
    class PatternCatalog <<catalog>> {
        -patterns: List<ComponentPattern>
        -totalPatterns: int
        -avgSignificance: double
        -topPatterns: List<String>
        --
        +addPattern(pattern: ComponentPattern): void
        +getPatternsByCategory(category: String): List<ComponentPattern>
        +calculateAverageSignificance(): double
        +getTopPatterns(): List<String>
        +generateSummary(): PatternSummary
    }
    
    class PatternSummary <<summary>> {
        -totalPatterns: int
        -byCategory: Map<String, Integer>
        -avgSignificance: double
        -topPatterns: List<String>
        --
        +getTotalPatterns(): int
        +getCategoryCounts(): Map<String, Integer>
        +getAverageSignificance(): double
    }
    
    enum PatternCategory <<enumeration>> {
        IMPLEMENTATION
        BEHAVIORAL
        STRUCTURAL
        CREATIONAL
    }
    
    class ImplementationEvidence <<evidence>> {
        -occurrenceCount: int
        -trendAnalysis: String
        -stabilityMetric: String
        --
        +collectEvidence(): List<String>
        +analyzeTrend(): String
        +assessStability(): boolean
    }
}

' Relationships
ComponentPattern <|-- UiComponentWorkPattern
PatternCatalog o-- ComponentPattern : contains
PatternCatalog ..> PatternSummary : generates
UiComponentWorkPattern --> PatternCategory : categorized by
UiComponentWorkPattern *-- ImplementationEvidence : has evidence
ComponentPattern ..> ImplementationEvidence : analyzed by

