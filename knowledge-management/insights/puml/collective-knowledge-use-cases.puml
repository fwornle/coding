title CollectiveKnowledge System Use Cases

actor User as "User"
actor ExternalSystem as "External System"

package "Knowledge Management" {
  usecase "Manage Knowledge Graph" as (Manage Knowledge Graph)
  usecase "Export Knowledge" as (Export Knowledge)
  usecase "Visualize Knowledge" as (Visualize Knowledge)
  usecase "Synchronize Data" as (Synchronize Data)
}

User -- (Manage Knowledge Graph)
User -- (Visualize Knowledge)
ExternalSystem -- (Export Knowledge)

(Manage Knowledge Graph) ..> (Export Knowledge) : include
(Manage Knowledge Graph) ..> (Synchronize Data) : include
(Visualize Knowledge) ..> (Manage Knowledge Graph) : extend

package "Tools" {
  usecase "vkb" as (vkb)
  usecase "MCP tools" as (MCP tools)
  usecase "graph-sync" as (graph-sync)
}

(vkb) -- (Visualize Knowledge)
(MCP tools) -- (Manage Knowledge Graph)
(graph-sync) -- (Synchronize Data)

@enduml