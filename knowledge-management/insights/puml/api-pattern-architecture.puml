@startuml
!include /Users/q284340/Agentic/coding/docs/puml/_standard-style.puml

!define RECTANGLE class

package "Knowledge Management System" {
    
    package "API Layer" {
        component [VkbApiClient] <<api>>
        component [ApiPattern] <<core>>
    }
    
    package "Core Services" {
        component [GraphDatabaseService] <<core>>
        component [SemanticAnalysisService] <<core>>
        component [ParallelWorkers] <<core>>
    }
    
    package "Storage Layer" {
        database [GraphDatabase\n(.data/knowledge-graph)] <<storage>>
        database [JSONExports\n(.data/knowledge-export)] <<storage>>
    }
    
    package "Command Interface" {
        component [vkb_command] <<api>>
        component [graph-sync_command] <<api>>
    }
}

[ApiPattern] --> [VkbApiClient] : "uses"
[VkbApiClient] --> [GraphDatabaseService] : "interacts with"
[GraphDatabaseService] --> [GraphDatabase\n(.data/knowledge-graph)] : "reads/writes"
[GraphDatabaseService] --> [JSONExports\n(.data/knowledge-export)] : "auto-sync exports"

[SemanticAnalysisService] --> [ParallelWorkers] : "batch processing"
[ParallelWorkers] --> [GraphDatabaseService] : "updates knowledge"

[vkb_command] --> [GraphDatabaseService] : "manages operations"
[graph-sync_command] --> [GraphDatabaseService] : "synchronizes data"

note top of [ApiPattern] : TransferablePattern\nMicroservices-based architecture\nfor knowledge management

note right of [JSONExports\n(.data/knowledge-export)] : Data-driven development\nAuto-synced from GraphDB

note bottom of [ParallelWorkers] : Batch mode processing\nfor improved performance

@enduml