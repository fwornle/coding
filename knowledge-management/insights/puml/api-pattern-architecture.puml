@startuml
!include /Users/q284340/Agentic/coding/docs/puml/_standard-style.puml

package "Knowledge Management" {
  component "GraphDatabaseService" as gds <<storage>>
  component "GraphDatabaseAdapter" as gda <<api>>
  component "PersistenceAgent" as pa <<agent>>
}

package "Semantic Analysis" {
  component "MCPAgent" as mcpa <<agent>>
  component "VkbApiClient" as vka <<external>>
  component "MCP Tools" as mcpt <<cli>>
}

package "Data Storage" {
  database "LevelDB" as ldb
  database "GraphDB" as graphdb
  file "JSON Exports" as json
}

gds --> graphdb : stores
gda --> gds : interacts
pa --> gds : persists
mcpa --> gds : uses
mcpa --> mcpt : uses
vka --> gds : visualizes
mcpa --> vka : uses
graphdb ..> json : exports
mcpt --> graphdb : synchronizes

note as AutoNote1
  ApiPattern: MCPAgent for semantic analysis and knowledge management

end note

@enduml