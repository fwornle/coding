@startuml
!include /Users/q284340/Agentic/coding/docs/puml/_standard-style.puml

package "Graph Database" {
  class GraphDatabaseService <<service>> {
    - graphDatabase: GraphDatabase
    + manageGraphDatabase()
  }
  class GraphDatabaseAdapter <<service>> {
    - graphDatabase: GraphDatabase
    + adaptGraphDatabase()
  }
  class GraphKnowledgeExporter <<service>> {
    - graphDatabase: GraphDatabase
    + exportGraphKnowledge()
  }
  class GraphDatabase <<file>> {
    - data: String
  }
}

package "CLI Access" {
  class VKBCommand <<interface>> {
    + visualizeGraph()
  }
  class GraphSyncCommand <<interface>> {
    + synchronizeGraph()
  }
}

package "Knowledge Export" {
  class AutoSynchronizedJSONExport <<file>> {
    - jsonData: String
  }
}

package "MCP Server Integration" {
  class MCPServer <<service>> {
    - integrations: String
    + enableKnowledgeOperations()
  }
}

GraphDatabaseService --* GraphDatabase
GraphDatabaseAdapter --* GraphDatabase
GraphKnowledgeExporter --* GraphDatabase
VKBCommand ..> GraphDatabaseService : uses
GraphSyncCommand ..> GraphDatabaseService : uses
AutoSynchronizedJSONExport ..> GraphKnowledgeExporter : uses
MCPServer --* GraphDatabaseService

@enduml