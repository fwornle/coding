@startuml
!include /Users/q284340/Agentic/coding/docs/puml/_standard-style.puml

package "Knowledge Management" {
  class GraphDatabaseService <<service>> {
    - graphDatabase: GraphDatabase
    + syncGraphDatabase()
    + queryGraphDatabase()
  }

  class GraphDatabaseAdapter <<interface>> {
    + adaptGraphDatabase()
  }

  class KnowledgeGraph <<file>> {
    - graphData: GraphData
  }

  GraphDatabaseService --* GraphDatabaseAdapter
  GraphDatabaseAdapter ..> GraphDatabase
  GraphDatabaseService --* KnowledgeGraph
}

package "MCP Agent" {
  class MCPAgent <<service>> {
    - mcpTools: MCPTools
    + performKnowledgeOperations()
  }

  class MCPTools <<interface>> {
    + executeMCPCommand()
  }

  MCPAgent --* MCPTools
}

package "Decorator Pattern" {
  abstract class DecoratorPattern <<stereotype>> {
    + decorate()
  }

  class SemanticAnalysisDecorator {
    - decoratorPattern: DecoratorPattern
    + analyzeSemantics()
  }

  DecoratorPattern <|-- SemanticAnalysisDecorator
}

package "Visualization" {
  class VKBCommand <<interface>> {
    + visualizeGraph()
  }

  class GraphSyncCommand <<interface>> {
    + syncGraphDatabase()
  }

  VKBCommand ..> GraphDatabase
  GraphSyncCommand ..> GraphDatabase
}

GraphDatabaseService --* MCPAgent
MCPAgent --* DecoratorPattern
DecoratorPattern --* KnowledgeGraph

@enduml