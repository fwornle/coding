@startuml
!include /Users/q284340/Agentic/coding/docs/puml/_standard-style.puml

package "Graph Database" {
  class GraphDatabaseService {
    - graph: Graphology
    - levelDB: LevelDB
    + storeKnowledge()
    + retrieveKnowledge()
  }
  class GraphKnowledgeExporter {
    - graphDatabaseService: GraphDatabaseService
    + exportJSON()
  }
}

package "Knowledge Operations" {
  abstract class MCPAgent {
    + operate()
  }
  class DecoratorPattern <<service>> {
    - persistenceAgent: PersistenceAgent
    - vkbApiClient: VkbApiClient
    + decorate()
  }
  class PersistenceAgent {
    + persist()
  }
  class VkbApiClient {
    + sync()
  }
}

package "Data Storage" {
  class KnowledgeGraph {
    - data: JSON
    + store()
  }
  class KnowledgeExport {
    - data: JSON
    + export()
  }
}

GraphDatabaseService --* GraphKnowledgeExporter
GraphKnowledgeExporter ..> KnowledgeGraph
DecoratorPattern --|> MCPAgent
DecoratorPattern --* PersistenceAgent
DecoratorPattern --* VkbApiClient
PersistenceAgent --* KnowledgeGraph
VkbApiClient --* KnowledgeExport

@enduml