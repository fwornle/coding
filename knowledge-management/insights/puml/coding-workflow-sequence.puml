@startuml
!include /relative/path/to/_standard-style.puml

title CodingWorkflow MCP Agent Architecture

actor Developer as dev
boundary "MCP Client" as mcp
control "CodingWorkflow Agent" as cwa

box "Knowledge Layer" #LightBlue
    control "Knowledge Management" as km
    entity "Semantic Analysis" as sa
end box

box "Data Layer" #LightGray  
    database "GraphDB" as gdb
    folder "JSON Exports" as json
end box

dev -> mcp: Request workflow execution
mcp -> cwa: execute_workflow(params)
activate cwa

cwa -> km: Initialize context
km -> gdb: Load graph
gdb --> km: Graph data

note over sa,ukb: Async processing recommended here

cwa --> mcp: Workflow results  
mcp --> dev: Analysis output
deactivate cwa
@enduml