@startuml
!include /Users/q284340/Agentic/coding/docs/puml/_standard-style.puml

package "Pattern Catalog" {
    class PatternCatalog {
        -totalPatterns: int
        -avgSignificance: double
        +getPatterns(): List<Pattern>
        +getSummary(): PatternSummary
        +getTopPatterns(): List<String>
    }
    
    class PatternSummary {
        -totalPatterns: int
        -byCategory: Map<String, Integer>
        -avgSignificance: double
        -topPatterns: List<String>
        +getCategoryCount(category: String): int
    }
    
    abstract class Pattern {
        -name: String
        -category: String
        -description: String
        -significance: int
        -evidence: List<String>
        -relatedComponents: List<String>
        +getName(): String
        +getSignificance(): int
        +getEvidence(): List<String>
    }
    
    class ApiRefactoringPattern <<Implementation>> {
        -occurrences: int
        -trend: String
        -language: String
        -usageNotes: List<String>
        +getOccurrences(): int
        +getTrend(): String
        +getUsageNotes(): List<String>
    }
    
    class PatternImplementation {
        -language: String
        -usageNotes: List<String>
        +getLanguage(): String
        +getUsageNotes(): List<String>
    }
    
    enum PatternCategory {
        IMPLEMENTATION
        ARCHITECTURAL
        DESIGN
        BEHAVIORAL
    }
    
    enum TrendType {
        INCREASING
        DECREASING
        STABLE
    }
}

PatternCatalog *-- "1..*" Pattern : contains
PatternCatalog *-- "1" PatternSummary : has
Pattern <|-- ApiRefactoringPattern : extends
Pattern *-- "1" PatternImplementation : implements
Pattern --> PatternCategory : categorized by
ApiRefactoringPattern --> TrendType : has trend

note right of ApiRefactoringPattern
  Current Status:
  - Occurrences: 5
  - Trend: decreasing
  - Significance: 3/5
end note

note top of PatternCatalog
  Analysis: api-refactoring-pattern
  Total Patterns: 1
  Implementation Category: 1
end note

@enduml