@startuml
!include /Users/q284340/Agentic/coding/docs/puml/_standard-style.puml

actor "KnowledgeExporter" as exporter
actor "PersistenceAgent" as agent
actor "VkbApiClient" as vkb_api
actor "GraphDatabaseService" as graph_db

usecase "Store Knowledge Graph" as store_kg
usecase "Export Knowledge Graph" as export_kg
usecase "Synchronize Knowledge Graph" as sync_kg
usecase "Visualize Knowledge Graph" as visualize_kg
usecase "Perform Knowledge Operations" as knowledge_ops

package "Knowledge Persistence Pattern" {
  graph_db -- store_kg
  graph_db -- export_kg
  graph_db -- sync_kg
  agent -- store_kg
  agent -- sync_kg
  exporter -- export_kg
  vkb_api -- visualize_kg
  vkb_api -- knowledge_ops
}

store_kg ..> export_kg : include
sync_kg ..> store_kg : include
visualize_kg ..> export_kg : include
knowledge_ops ..> store_kg : include

exporter -- graph_db
agent -- graph_db
vkb_api -- graph_db

@enduml