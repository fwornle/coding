@startuml
!include /Users/q284340/Agentic/coding/docs/puml/_standard-style.puml

actor MCPUser as "MCP User"
actor VkbCli as "VkbCli (MCPAgent)"

usecase "Visualize Knowledge" as (VisualizeKnowledge)
usecase "Export Knowledge" as (ExportKnowledge)
usecase "Manage Knowledge" as (ManageKnowledge)
usecase "Analyze Data" as (AnalyzeData)

VkbCli -- (VisualizeKnowledge)
VkbCli -- (ExportKnowledge)
VkbCli -- (ManageKnowledge)
VkbCli -- (AnalyzeData)

MCPUser -- (VisualizeKnowledge)
MCPUser -- (ExportKnowledge)
MCPUser -- (ManageKnowledge)
MCPUser -- (AnalyzeData)

package "Graph Database Service" {
  usecase "Store Knowledge" as (StoreKnowledge)
  usecase "Retrieve Knowledge" as (RetrieveKnowledge)
  VkbCli -- (StoreKnowledge)
  VkbCli -- (RetrieveKnowledge)
}

package "Graph Knowledge Exporter" {
  usecase "Export Knowledge Graph" as (ExportKnowledgeGraph)
  VkbCli -- (ExportKnowledgeGraph)
}

package "Persistence Agent" {
  usecase "Persist Knowledge" as (PersistKnowledge)
  VkbCli -- (PersistKnowledge)
}

(VisualizeKnowledge) ..> (StoreKnowledge) : includes
(ExportKnowledge) ..> (ExportKnowledgeGraph) : includes
(ManageKnowledge) ..> (RetrieveKnowledge) : includes
(AnalyzeData) ..> (RetrieveKnowledge) : includes

@enduml