package "Knowledge Management" {
  class UkbCli <<MCPAgent>> {
    - graphDatabaseService: GraphDatabaseService
    - graphKnowledgeExporter: GraphKnowledgeExporter
    + storeKnowledge()
    + exportKnowledge()
  }

  class GraphDatabaseService {
    + storeKnowledgeGraph()
    + retrieveKnowledgeGraph()
  }

  class GraphKnowledgeExporter {
    + exportKnowledgeGraph()
  }

  UkbCli --* GraphDatabaseService
  UkbCli --* GraphKnowledgeExporter
}

package "Data Storage" {
  class Graphology <<service>> {
    + storeGraphData()
    + retrieveGraphData()
  }

  class LevelDB <<service>> {
    + storeData()
    + retrieveData()
  }

  GraphDatabaseService --* Graphology
  GraphDatabaseService --* LevelDB
}

package "Commands" {
  class VkbCommand <<interface>> {
    + visualizeKnowledge()
  }

  class GraphSyncCommand <<interface>> {
    + synchronizeKnowledge()
  }

  UkbCli --* VkbCommand
  UkbCli --* GraphSyncCommand
}

@enduml