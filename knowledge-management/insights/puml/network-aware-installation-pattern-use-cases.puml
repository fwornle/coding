left to right direction

actor "Developer" as dev
actor "MCP Agent" as agent
actor "Knowledge System" as ks

package "NetworkAwareInstallationPattern System" {
  usecase "Analyze Codebase" as analyze
  usecase "Extract Installation Patterns" as extract
  usecase "Store Knowledge Entity" as store
  usecase "Generate Semantic Analysis" as semantic
  usecase "Export Knowledge" as export
  usecase "Manage Graph Database" as graphdb
  usecase "Sync Data Storage" as sync
}

package "Data Storage" {
  usecase "Access Graphology + LevelDB" as leveldb
  usecase "Read JSON Exports" as jsonread
  usecase "Write Knowledge Graph" as writegraph
}

package "Infrastructure Components" {
  usecase "Execute Knowledge Management" as km
  usecase "Run UKB Unified Services" as ukb
