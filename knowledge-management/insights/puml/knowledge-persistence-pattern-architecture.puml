package "Knowledge Persistence Pattern" {
  component GraphDatabase as "Graph Database <<storage>>" 
  component LevelDB as "LevelDB <<storage>>"
  component GraphDatabaseService as "Graph Database Service <<core>>"
  component GraphKnowledgeExporter as "Graph Knowledge Exporter <<agent>>"
  component PersistenceAgent as "Persistence Agent <<agent>>"

  note as AutoNote1
  Provides scalable and maintainable solution for knowledge storage and retrieval

  end note
  GraphDatabaseService --* GraphDatabase : interacts with
  GraphKnowledgeExporter --* GraphDatabase : exports from
  PersistenceAgent --* GraphDatabase : persists to
  GraphKnowledgeExporter --* PersistenceAgent : triggers auto-export
  GraphDatabaseService --* GraphKnowledgeExporter : configures
  GraphDatabaseService --* PersistenceAgent : configures
}

package "File System" {
  component knowledge_export_directory as ".data/knowledge-export <<storage>>"
  GraphKnowledgeExporter --* knowledge_export_directory : exports to
}

@enduml