@startuml
!include /Users/q284340/Agentic/coding/docs/puml/_standard-style.puml

package "Knowledge Management Core" {
  class KnowledgeManagementSystem <<service>> {
    +processContent()
    +manageKnowledge()
    +enforceConstraints()
  }
  
  class GraphDatabaseService <<service>> {
    -graphologyInstance: Graph
    -leveldbInstance: LevelDB
    +query()
    +persist()
    +synchronize()
  }
  
  class PersistenceAgent <<agent>> {
    +handleWrite()
    +handleEdit()
    +validateConstraints()
  }
}

package "Shared Utilities" {
  class UkbUnified <<library>> {
    +sharedUtilities()
    +commonFunctions()
  }
  
  class GraphDatabaseAdapter <<adapter>> {
    +adaptQuery()
    +adaptPersistence()
    +handleSynchronization()
  }
}

package "Semantic Analysis Services" {
  class SemanticAnalysisService <<service>> {
    +analyzeContent()
    +classifyUpdates()
    +processBatch()
  }
  
  class ParallelWorker <<worker>> {
    -batchMode: boolean
    +executeBatch()
    +processInParallel()
  }
}

package "Storage Layer" {
  class GraphKnowledgeExporter <<exporter>> {
    -exportPath: string
    +exportToJson()
    +autoSync()
  }
  
  class DataStorage <<file>> {
    +knowledgeGraph: ".data/knowledge-graph"
    +knowledgeExport: ".data/knowledge-export"
  }
}

package "Command Interface" {
  class CommandInterface <<interface>> {
    +vkb()
    +coding()
    +graphSync()
  }
}

package "External Integration" {
  class VkbApiClient <<client>> {
    +integrateExternal()
    +maintainConnection()
  }
  
  class ArchitecturalEvolutionPattern <<agent>> {
    +trackEvolution()
    +analyzePatterns()
    +generateInsights()
  }
}

' Relationships
KnowledgeManagementSystem --> GraphDatabaseService : uses
KnowledgeManagementSystem --> PersistenceAgent : coordinates
GraphDatabaseService --> UkbUnified : depends on
GraphDatabaseService --> GraphDatabaseAdapter : implements through
SemanticAnalysisService --> ParallelWorker : utilizes
SemanticAnalysisService --> GraphDatabaseService : integrates with
SemanticAnalysisService --> PersistenceAgent : works with
GraphKnowledgeExporter --> DataStorage : exports to
GraphDatabaseService --> DataStorage : stores in
CommandInterface --> GraphDatabaseAdapter : synchronizes via
VkbApiClient --> ArchitecturalEvolutionPattern : supports
ArchitecturalEvolutionPattern --> GraphDatabaseService : maintains patterns through
PersistenceAgent --> SemanticAnalysisService : triggers analysis

@enduml