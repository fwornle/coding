@startuml
!include /Users/q284340/Agentic/coding/docs/puml/_standard-style.puml

package "Knowledge Management" {
  class MCPMemoryLoggingIntegrationPattern <<service>> {
    - graphDatabase: GraphDatabase
    - knowledgeExporter: GraphKnowledgeExporter
    + storeKnowledge()
    + retrieveKnowledge()
  }

  class GraphDatabase <<file>> {
    - graphology: Graphology
    - levelDB: LevelDB
    + storeData()
    + retrieveData()
  }

  class GraphKnowledgeExporter <<service>> {
    - exportKnowledge()
  }

  MCPMemoryLoggingIntegrationPattern --* GraphDatabase
  MCPMemoryLoggingIntegrationPattern --* GraphKnowledgeExporter
}

package "Graph Database Components" {
  abstract class PersistenceAgent <<service>> {
    + interactWithGraphDatabase()
  }

  class VkbApiClient <<service>> {
    + performKnowledgeOperations()
  }

  class Graphology <<interface>> {
    + storeData()
    + retrieveData()
  }

  class LevelDB <<interface>> {
    + storeData()
    + retrieveData()
  }

  PersistenceAgent --|> VkbApiClient
  VkbApiClient --* Graphology
  VkbApiClient --* LevelDB
}

package "Tools and Visualization" {
  class VkbCommand <<service>> {
    + visualizeKnowledge()
  }

  class MCPTools <<service>> {
    + performKnowledgeOperations()
  }

  VkbCommand --* MCPMemoryLoggingIntegrationPattern
  MCPTools --* MCPMemoryLoggingIntegrationPattern
}

@enduml