@startuml
!include /Users/q284340/Agentic/coding/docs/puml/_standard-style.puml

left to right direction

actor "System Administrator" as admin
actor "Developer" as dev
actor "Data Analyst" as analyst
actor "External System" as external

rectangle "Microservices Architecture" {
    usecase "Deploy Microservices" as deploy
    usecase "Monitor Service Health" as monitor
    usecase "Scale Services" as scale
}

rectangle "Graph Database Operations" {
    usecase "Store Knowledge Graph" as store
    usecase "Query Graph Data" as query
    usecase "Manage LevelDB Storage" as leveldb
}

rectangle "Event-Driven Processing" {
    usecase "Process Semantic Analysis" as semantic
    usecase "Execute Batch Operations" as batch
    usecase "Handle Parallel Workers" as parallel
}

rectangle "Decorator Pattern Implementation" {
    usecase "Apply Behavior Decorators" as decorate
    usecase "Extend Object Functionality" as extend
    usecase "Maintain Object Structure" as maintain
}

rectangle "API & Data Management" {
    usecase "Access VKB API" as vkbapi
    usecase "Implement Access Control" as access
    usecase "Ensure Data Consistency" as consistency
}

' Actor relationships
admin --> deploy
admin --> monitor
admin --> scale
admin --> access

dev --> decorate
dev --> extend
dev --> maintain
dev --> semantic

analyst --> query
analyst --> store
analyst --> batch

external --> vkbapi

' Include relationships
deploy ..> monitor : <<include>>
semantic ..> parallel : <<include>>
batch ..> parallel : <<include>>
store ..> leveldb : <<include>>
vkbapi ..> access : <<include>>
extend ..> maintain : <<include>>

' Extend relationships
scale ..> monitor : <<extend>>
consistency ..> store : <<extend>>

note right of decorate : "Adds behavior without\nmodifying structure"
note bottom of parallel : "Enhances responsiveness\nand fault tolerance"
note right of leveldb : "Graphology + LevelDB\nfor robust storage"

@enduml