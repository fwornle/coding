@startuml
!include /Users/q284340/Agentic/coding/docs/puml/_standard-style.puml

package "VkbCli Knowledge Entity" {
  class GraphDatabaseService <<service>> {
    - graphData: String
    + storeKnowledge()
    + retrieveKnowledge()
  }

  class GraphKnowledgeExporter <<service>> {
    - exportData: String
    + exportKnowledge()
  }

  class PersistenceAgent <<service>> {
    - persistedData: String
    + persistData()
  }

  class VkbCli <<MCPAgent>> {
    - knowledgeGraph: GraphDatabaseService
    - knowledgeExporter: GraphKnowledgeExporter
    - persistenceAgent: PersistenceAgent
    + visualizeKnowledge()
    + manageKnowledge()
  }

  GraphDatabaseService --* VkbCli
  GraphKnowledgeExporter --* VkbCli
  PersistenceAgent --* VkbCli
}

class VkbCommand <<interface>> {
  + visualize()
}

VkbCli ..> VkbCommand : uses

package "Data Storage" {
  class KnowledgeGraphData <<file>> {
    - graphData: String
  }

  class KnowledgeExportData <<file>> {
    - exportData: String
  }

  KnowledgeGraphData --* GraphDatabaseService
  KnowledgeExportData --* GraphKnowledgeExporter
}

@enduml