@startuml
!include /Users/q284340/Agentic/coding/docs/puml/_standard-style.puml

actor User as "User"
actor CLI as "Command Line Interface"

usecase "Interact with Graph Database" as (InteractWithGraphDatabase)
usecase "Export Knowledge Graph" as (ExportKnowledgeGraph)
usecase "Auto-Sync JSON Exports" as (AutoSyncJSONExports)
usecase "Access Knowledge Graph via vkb" as (AccessViaVKB)
usecase "Code with graph-sync" as (CodeWithGraphSync)

User -- (InteractWithGraphDatabase)
User -- (ExportKnowledgeGraph)
User -- (AccessViaVKB)
User -- (CodeWithGraphSync)

CLI -- (InteractWithGraphDatabase)
CLI -- (AccessViaVKB)
CLI -- (CodeWithGraphSync)

package "Graph Database Components" {
  component GraphDatabaseService as "Graph Database Service"
  component GraphKnowledgeExporter as "Graph Knowledge Exporter"
  component GraphDatabaseAdapter as "Graph Database Adapter"
}

(InteractWithGraphDatabase) ..> GraphDatabaseService
(ExportKnowledgeGraph) ..> GraphKnowledgeExporter
(AutoSyncJSONExports) ..> GraphKnowledgeExporter
(AccessViaVKB) ..> GraphDatabaseService
(CodeWithGraphSync) ..> GraphDatabaseAdapter

package "Storage" {
  storage GraphDatabase as "Graph Database (.data/knowledge-graph)"
  storage JSONExports as "JSON Exports (.data/knowledge-export)"
}

GraphDatabaseService ..> GraphDatabase
GraphKnowledgeExporter ..> GraphDatabase
GraphKnowledgeExporter ..> JSONExports

@enduml