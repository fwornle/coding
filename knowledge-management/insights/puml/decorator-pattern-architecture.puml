@startuml
!include /Users/q284340/Agentic/coding/docs/puml/_standard-style.puml

package "Knowledge Management" {
  component [src/knowledge-management] <<core>> as KM
  component [lib/ukb-unified] <<core>> as UKB
}

package "Semantic Analysis Integration" {
  component [integrations/mcp-server-semantic-analysis/src] <<api>> as MCP
}

package "Graph Database Storage" {
  component [Graphology] <<storage>> as Graph
  component [LevelDB] <<storage>> as LevelDB
  database ".data/knowledge-graph" <<storage>> as GraphStorage
}

package "Export Layer" {
  component [JSON Export] <<api>> as JSONExport
  database ".data/knowledge-export" <<storage>> as ExportStorage
}

package "DecoratorPattern Implementation" {
  component [DecoratorPattern Entity] <<core>> as DecoratorEntity
  note right of DecoratorEntity
    Extracted from codebase analysis
    Stored as reusable knowledge entity
    Part of semantic analysis infrastructure
  end note
}

' Core relationships
KM --> Graph : uses
UKB --> Graph : integrates with
MCP --> DecoratorEntity : implements
Graph --> LevelDB : persisted by
Graph --> GraphStorage : stores data in

' Export relationships
GraphStorage --> JSONExport : auto-synced to
JSONExport --> ExportStorage : exports to

' Pattern implementation relationships
KM --> DecoratorEntity : manages
UKB --> DecoratorEntity : utilizes
MCP --> DecoratorEntity : analyzes

' Data flow
DecoratorEntity ..> GraphStorage : stored in
GraphStorage ..> ExportStorage : synced to

note top of "Knowledge Management"
  DecoratorPattern implementation spans across
  multiple components for comprehensive
  semantic analysis and knowledge storage
end note

@enduml