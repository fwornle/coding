!include /Users/q284340/Agentic/coding/docs/puml/_standard-style.puml

title Coding Project Architecture

package "Core Implementation" {
    component "knowledge-management" as km <<core>>
    component "ukb-unified" as ukb <<core>>
    component "mcp-server-semantic-analysis" as mcp <<api>>
}

package "Storage Layer" {
    component "Graphology" as graph <<storage>>
    component "LevelDB" as leveldb <<storage>>
    database "knowledge-graph" as kgdb <<storage>>
    folder "knowledge-export" as export <<storage>>
}

package "Data Flow" {
    component "Auto-Sync Process" as sync <<process>>
    note right of sync : "Auto-synced from GraphDB"
}

' Core relationships
km --> graph : uses
km --> leveldb : persists to
ukb --> km : integrates with
mcp --> km : semantic analysis

' Storage relationships  
graph --> kgdb : stores at\n.data/knowledge-graph
kgdb --> sync : triggers
sync --> export : generates\n.data/knowledge-export

' Implementation paths
note top of km : "src/knowledge-management"
note top of ukb : "lib/ukb-unified" 
note top of mcp : "integrations/mcp-server-semantic-analysis/src"

note bottom of kgdb : "shared-memory.json REMOVED\nfrom codebase"

note as summary
  **Coding Project**
  Semantic analysis and knowledge management
  infrastructure using Graphology + LevelDB
  with auto-synced JSON exports
end note

@enduml