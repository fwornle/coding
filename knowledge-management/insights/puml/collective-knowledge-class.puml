@startuml
!include /Users/q284340/Agentic/coding/docs/puml/_standard-style.puml

package "Knowledge Management" {
  class GraphDatabaseService <<service>> {
    - graphDatabase: GraphDatabase
    + manageKnowledgeGraph()
    + performQuery(query: String)
  }
  
  class GraphKnowledgeExporter {
    - graphDatabase: GraphDatabase
    + exportKnowledgeGraph()
  }
  
  class GraphDatabaseAdapter {
    - graphDatabase: GraphDatabase
    + adaptGraphDatabase()
  }
  
  class PersistenceAgent {
    - graphDatabase: GraphDatabase
    + persistData()
  }
  
  class VkbApiClient {
    - apiClient: ApiClient
    + sendDataToVkb()
  }
  
  GraphDatabaseService --* GraphDatabaseAdapter
  GraphDatabaseService --* GraphKnowledgeExporter
  GraphDatabaseAdapter --* GraphDatabase
  GraphKnowledgeExporter --* GraphDatabase
  PersistenceAgent --* GraphDatabase
  VkbApiClient --* GraphDatabaseService
}

package "Storage" {
  class Graphology <<file>> {
    - data: String
  }
  
  class LevelDB <<file>> {
    - data: String
  }
  
  class JSONExporter <<file>> {
    - data: String
  }
  
  Graphology --o LevelDB
  LevelDB --o JSONExporter
}

GraphDatabaseService ..> Graphology
GraphDatabaseService ..> LevelDB
GraphKnowledgeExporter ..> JSONExporter

@enduml