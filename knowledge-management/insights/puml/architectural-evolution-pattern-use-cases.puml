@startuml
!include /Users/q284340/Agentic/coding/docs/puml/_standard-style.puml

actor "Developer" as dev
actor "System Administrator" as admin
actor "External System" as ext

package "Knowledge Management" {
    usecase "Manage Domain Logic" as manage_domain
    usecase "Perform Semantic Analysis" as semantic_analysis
    usecase "Execute Batch Processing" as batch_process
    usecase "Track Content Changes" as track_changes
}

package "Data Operations" {
    usecase "Store Graph Data" as store_graph
    usecase "Export Knowledge" as export_knowledge
    usecase "Synchronize Data" as sync_data
    usecase "Persist Knowledge" as persist_knowledge
}

package "Command Interface" {
    usecase "Visualize Knowledge (vkb)" as visualize
    usecase "Execute Development Tasks" as dev_tasks
    usecase "Sync Graph Data" as graph_sync
}

package "Integration Services" {
    usecase "Connect External APIs" as external_api
    usecase "Manage MCP Server" as mcp_server
}

' Actor relationships
dev --> visualize
dev --> dev_tasks
dev --> manage_domain
dev --> semantic_analysis

admin --> graph_sync
admin --> sync_data
admin --> export_knowledge

ext --> external_api
ext --> mcp_server

' Use case relationships
semantic_analysis ..> batch_process : <<include>>
manage_domain ..> track_changes : <<include>>
store_graph ..> persist_knowledge : <<include>>
export_knowledge ..> sync_data : <<extend>>

visualize --> store_graph
dev_tasks --> manage_domain
graph_sync --> sync_data
semantic_analysis --> store_graph
external_api --> persist_knowledge

note right of semantic_analysis : "Parallel worker implementation\nwith incremental constraints"
note bottom of store_graph : "Graphology + LevelDB\nat .data/knowledge-graph"
note right of export_knowledge : "Auto-synchronized JSON\nat .data/knowledge-export"

@enduml