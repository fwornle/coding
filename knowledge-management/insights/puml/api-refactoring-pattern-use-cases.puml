@startuml
!include /Users/q284340/Agentic/coding/docs/puml/_standard-style.puml

left to right direction

actor "API Developer" as dev
actor "API Client" as client
actor "System Administrator" as admin

rectangle "API Refactoring System" {
  usecase "Analyze API Endpoints" as analyze
  usecase "Identify Refactoring Opportunities" as identify
  usecase "Apply Refactoring Pattern" as apply
  usecase "Validate API Changes" as validate
  usecase "Monitor API Usage" as monitor
  usecase "Track Pattern Trends" as track
  usecase "Generate Refactoring Report" as report
}

rectangle "Implementation Support" {
  usecase "Execute Code Changes" as execute
  usecase "Update API Documentation" as docs
  usecase "Manage Backward Compatibility" as compat
}

dev --> analyze
dev --> identify
dev --> apply
dev --> validate
dev --> report

client --> monitor
client --> validate

admin --> track
admin --> monitor
admin --> report

apply ..> execute : <<include>>
apply ..> docs : <<include>>
apply ..> compat : <<include>>

identify ..> analyze : <<include>>
validate ..> monitor : <<include>>
track ..> monitor : <<include>>

note right of apply : "5 occurrences\nDecreasing trend"
note bottom of track : "Pattern significance: 3/5"

@enduml