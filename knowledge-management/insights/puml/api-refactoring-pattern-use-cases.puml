@startuml
!include /Users/q284340/Agentic/coding/docs/puml/_standard-style.puml

title API Refactoring Pattern Use Cases

actor "Developer" as dev
actor "API Client" as client
actor "System Administrator" as admin

package "API Refactoring System" {
    usecase "Identify API Changes" as identify
    usecase "Analyze Impact" as analyze
    usecase "Execute Refactoring" as execute
    usecase "Validate Changes" as validate
    usecase "Monitor Usage Trends" as monitor
}

package "Implementation Support" {
    usecase "Generate Migration Guide" as migrate
    usecase "Update Documentation" as docs
    usecase "Maintain Backward Compatibility" as compat
}

dev --> identify
dev --> analyze
dev --> execute
admin --> monitor
admin --> validate

client --> compat
client --> migrate

identify ..> analyze : <<include>>
analyze ..> execute : <<include>>
execute ..> validate : <<include>>
execute ..> migrate : <<extend>>
execute ..> docs : <<extend>>
validate ..> compat : <<include>>

note right of monitor : "5 occurrences detected\nTrend: decreasing"
note top of execute : "Implementation Category\nSignificance: 3/5"

@enduml