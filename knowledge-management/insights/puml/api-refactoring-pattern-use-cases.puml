@startuml
!include /Users/q284340/Agentic/coding/docs/puml/_standard-style.puml

left to right direction

actor "API Developer" as dev
actor "System Architect" as architect
actor "Legacy System" as legacy
actor "Client Applications" as clients

package "API Refactoring System" {
  usecase "Analyze API Structure" as analyze
  usecase "Identify Refactoring Opportunities" as identify
  usecase "Apply Refactoring Patterns" as apply
  usecase "Validate API Changes" as validate
  usecase "Monitor API Usage" as monitor
  usecase "Generate Migration Plans" as migrate
  usecase "Track Pattern Occurrences" as track
  usecase "Assess Pattern Significance" as assess
}

package "Implementation Patterns" {
  usecase "Execute API Refactoring Pattern" as execute
  usecase "Decrease Pattern Usage" as decrease
}

dev --> analyze
dev --> apply
dev --> validate
architect --> identify
architect --> assess
architect --> migrate

legacy --> analyze
clients --> monitor
clients --> validate

analyze ..> identify : <<include>>
identify ..> apply : <<include>>
apply ..> validate : <<include>>
apply --> execute
monitor --> track
assess --> track

execute --> decrease : <<extend>>

note right of execute : "5 occurrences\nTrend: decreasing\nSignificance: 3"
note top of decrease : "Pattern usage trending downward"

@enduml