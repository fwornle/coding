@startuml
!include /Users/q284340/Agentic/coding/docs/puml/_standard-style.puml

actor "System Administrator" as Admin
actor "MCP Tools" as MCP
actor "vkb Command" as vkb

usecase "Manage Knowledge Graph" as (Manage Knowledge Graph)
usecase "Export Knowledge" as (Export Knowledge)
usecase "Visualize Knowledge" as (Visualize Knowledge)
usecase "Perform Knowledge Operations" as (Perform Knowledge Operations)

package "GraphDatabase" {
  component "GraphDatabaseService" as GDS
  component "GraphDatabaseAdapter" as GDA
  component "PersistenceAgent" as PA
  component "GraphKnowledgeExporter" as GKE
}

Admin -- (Manage Knowledge Graph)
MCP -- (Perform Knowledge Operations)
vkb -- (Visualize Knowledge)

(Manage Knowledge Graph) ..> (Export Knowledge) : include
(Manage Knowledge Graph) ..> (Visualize Knowledge) : include
(Perform Knowledge Operations) ..> (Manage Knowledge Graph) : extend

GDS ..> GDA : adapt
GDS ..> PA : manage
GDS ..> GKE : export
PA ..> GDA : store

@enduml