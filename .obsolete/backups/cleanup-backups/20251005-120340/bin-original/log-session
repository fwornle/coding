#!/bin/bash
# Manual post-session logger trigger

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
CODING_REPO_DIR="$(dirname "$SCRIPT_DIR")"

echo "üìù Manually triggering post-session logging..."

# Run the simplified session logger with multi-topic support
if [[ -f "$CODING_REPO_DIR/scripts/post-session-logger.js" ]]; then
    node "$CODING_REPO_DIR/scripts/post-session-logger.js" "$(pwd)" "$CODING_REPO_DIR"
else
    echo "‚ùå Post-session logger not found at: $CODING_REPO_DIR/scripts/post-session-logger.js"
    exit 1
fi