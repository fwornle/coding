{
  "name": "km-copilot-bridge",
  "displayName": "Knowledge Management Copilot Bridge",
  "description": "Enables ukb/vkb commands in GitHub Copilot chat",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Other"],
  "main": "./src/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "chatParticipants": [
      {
        "id": "km-assistant",
        "name": "KM",
        "description": "Knowledge Management Assistant",
        "isSticky": true
      }
    ],
    "commands": [
      {
        "command": "km-copilot.ukb",
        "title": "Update Knowledge Base"
      },
      {
        "command": "km-copilot.vkb",
        "title": "View Knowledge Base"
      }
    ],
    "configuration": {
      "title": "KM Copilot Bridge",
      "properties": {
        "kmCopilot.fallbackServicePort": {
          "type": "number",
          "default": 8765,
          "description": "Port for fallback services communication"
        }
      }
    }
  },
  "dependencies": {
    "axios": "^1.6.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "20.x",
    "@vscode/vsce": "^2.22.0"
  },
  "scripts": {
    "package": "vsce package",
    "publish": "vsce publish"
  }
}