{
  "mcpServers": {
    "memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ]
    },
    "browser-access": {
      "command": "node",
      "args": ["{{CODING_TOOLS_PATH}}/integrations/browser-access/dist/index.js"],
      "env": {
        "LOCAL_CDP_URL": "{{LOCAL_CDP_URL}}",
        "ANTHROPIC_API_KEY": "{{ANTHROPIC_API_KEY}}"
      }
    },
    "semantic-analysis": {
      "command": "node",
      "args": ["{{CODING_TOOLS_PATH}}/integrations/mcp-server-semantic-analysis/dist/index.js"],
      "env": {
        "CODING_TOOLS_PATH": "{{CODING_TOOLS_PATH}}",
        "KNOWLEDGE_BASE_PATH": "{{KNOWLEDGE_BASE_PATH}}",
        "CODING_DOCS_PATH": "{{CODING_DOCS_PATH}}",
        "ANTHROPIC_API_KEY": "{{ANTHROPIC_API_KEY}}",
        "OPENAI_API_KEY": "{{OPENAI_API_KEY}}"
      }
    },
    "archon": {
      "command": "npx",
      "args": [
        "mcp-remote",
        "http://localhost:8051/mcp"
      ]
    },
    "mcp-git-ingest": {
        "command": "uvx",
        "args": ["--from", "git+https://github.com/adhikasp/mcp-git-ingest", "mcp-git-ingest"],
        "env": {
          "LOG_LEVEL": "WARNING"
        }
    },
    "constraint-monitor": {
      "command": "node",
      "args": ["{{CODING_TOOLS_PATH}}/integrations/constraint-monitor/src/mcp/constraint-monitor-server.js"],
      "env": {
        "GROQ_API_KEY": "{{GROQ_API_KEY}}",
        "ANTHROPIC_API_KEY": "{{ANTHROPIC_API_KEY}}",
        "CODING_TOOLS_PATH": "{{CODING_TOOLS_PATH}}"
      }
    }
  }
}
