{
  "statusLine": {
    "toolInteractionHook": "{{CODING_TOOLS_PATH}}/.mcp-sync/tool-interaction-hook.cjs",
    "postSessionHook": "{{CODING_TOOLS_PATH}}/scripts/post-session-logger.js"
  },
  "mcpServers": {
    "browser-access": {
      "command": "node",
      "args": ["{{CODING_TOOLS_PATH}}/integrations/browser-access/dist/index.js"],
      "env": {
        "LOCAL_CDP_URL": "{{LOCAL_CDP_URL}}",
        "ANTHROPIC_API_KEY": "{{ANTHROPIC_API_KEY}}"
      }
    },
    "semantic-analysis": {
      "command": "node",
      "args": ["{{CODING_TOOLS_PATH}}/integrations/mcp-server-semantic-analysis/dist/index.js"],
      "env": {
        "CODING_TOOLS_PATH": "{{CODING_TOOLS_PATH}}",
        "KNOWLEDGE_BASE_PATH": "{{KNOWLEDGE_BASE_PATH}}",
        "CODING_DOCS_PATH": "{{CODING_DOCS_PATH}}",
        "ANTHROPIC_API_KEY": "{{ANTHROPIC_API_KEY}}",
        "OPENAI_API_KEY": "{{OPENAI_API_KEY}}"
      }
    },
    "serena Docs": {
      "command": "npx",
      "args": [
        "mcp-remote",
        "https://gitmcp.io/oraios/serena?tab=readme-ov-file"
      ]
    },
    "mcp-git-ingest": {
        "command": "uvx",
        "args": ["--from", "git+https://github.com/adhikasp/mcp-git-ingest", "mcp-git-ingest"],
        "env": {
          "LOG_LEVEL": "WARNING"
        }
    },
    "constraint-monitor": {
      "command": "node",
      "args": ["{{CODING_TOOLS_PATH}}/integrations/mcp-constraint-monitor/src/server.js"],
      "env": {
        "GROK_API_KEY": "{{GROK_API_KEY}}",
        "ANTHROPIC_API_KEY": "{{ANTHROPIC_API_KEY}}",
        "CODING_TOOLS_PATH": "{{CODING_TOOLS_PATH}}"
      }
    },
    "spec-workflow": {
      "command": "npx",
      "args": ["-y", "@pimzino/spec-workflow-mcp@latest", "{{CODING_TOOLS_PATH}}"]
    },
    "serena": {
      "command": "uvx",
      "args": ["--from", "git+https://github.com/oraios/serena", "serena", "start-mcp-server", "--context", "ide-assistant", "--project", "{{CODING_TOOLS_PATH}}"]
    },
    "shadcn": {
      "command": "npx",
      "args": ["shadcn@latest", "mcp"],
      "cwd": "{{CODING_TOOLS_PATH}}/integrations/mcp-constraint-monitor"
    }
  }
}
