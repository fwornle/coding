{
  "_comment": "Copilot CLI native hooks configuration - bridges to unified hook system",
  "_documentation": "See https://docs.github.com/en/copilot/how-tos/copilot-cli/use-hooks",

  "sessionStart": {
    "command": "./lib/agent-api/hooks/copilot-bridge.sh",
    "args": ["sessionStart"]
  },

  "sessionEnd": {
    "command": "./lib/agent-api/hooks/copilot-bridge.sh",
    "args": ["sessionEnd"]
  },

  "preToolUse": {
    "command": "./lib/agent-api/hooks/copilot-bridge.sh",
    "args": ["preToolUse"]
  },

  "postToolUse": {
    "command": "./lib/agent-api/hooks/copilot-bridge.sh",
    "args": ["postToolUse"]
  },

  "userPromptSubmitted": {
    "command": "./lib/agent-api/hooks/copilot-bridge.sh",
    "args": ["userPromptSubmitted"]
  },

  "errorOccurred": {
    "command": "./lib/agent-api/hooks/copilot-bridge.sh",
    "args": ["errorOccurred"]
  }
}
