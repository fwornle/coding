GRAPH --> STORE

DETAILS --> MARKDOWN
DETAILS --> MERMAID
DETAILS --> STORE

TYPE_FILTER --> STORE
SEARCH --> STORE
TEAM_FILTER --> STORE
SOURCE_FILTER --> STORE

STORE --> SLICE
SLICE --> CLIENT
CLIENT --> HELPERS

@enduml
